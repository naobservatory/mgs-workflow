/************************************************
| CONFIGURATION FILE FOR NAO VIRAL MGS WORKFLOW |
************************************************/

// This template is appropriate for "run" workflow on non-ONT platforms (illumina, pacbio, or aviti)

params {
    mode = "run"

    // Sequencing platform
    platform = <PLATFORM> // One of "illumina", "pacbio", "aviti"; for "ont", instead start with run_ont.config

    // Directories
    base_dir = <PATH TO YOUR DIRECTORY> // Parent for working and output directories (can be S3)
    ref_dir = <PATH TO REFERENCE DIRECTORY> // Reference/index directory (generated by index workflow)

    // Files
    sample_sheet = "${launchDir}/samplesheet.csv" // Path to library TSV
    adapters = "${projectDir}/ref/adapters.fasta" // Path to adapter file for adapter trimming

    // Other required parameters
    n_reads_profile = 1000000 // Number of reads per sample to run through taxonomic profiling
    bt2_score_threshold = 20 // Normalized score threshold for calling a host-infecting virus read (typically 15 or 20)
    cutadapt_error_rate = 0.33 // Maximum mismatch fraction between read and adapter for cutadapt trimming; 
                               // default 0.33, lower for less extreme trimming
    bracken_threshold = 1 // Bracken read threshold (default 10, can be lowered for testing on very small datasets)
    host_taxon = "vertebrate" // Host taxon to use for host-infecting virus identification with Kraken2.
    random_seed = "17310" // Random seed for non-deterministic processes. Empty string -> random seed.

    // BLAST validation (optional)
    blast_db_prefix = "core_nt" // Prefix for BLAST database
    blast_viral_fraction = 0 // Fraction of putative host-infecting virus reads to BLAST vs nt (0 = don't run BLAST)
    blast_min_frac = 0.9 // Keep BLAST hits whose bitscore is at least this fraction of the best bitscore for that query
    blast_max_rank = 10 // Keep BLAST hits whose dense bitscore rank for that query is at most this value
                        // Recommended setting: 10 for short-read 
    blast_perc_id = 60 // Percent identity threshold for BLAST hits
                       // Recommended setting: 60 for short-read
    blast_qcov_hsp_perc = 30 // Query coverage threshold for BLAST hits
                             // Recommended setting: 30 for short-read
    taxid_artificial = "81077" // Parent taxid for artificial sequences in NCBI taxonomy
}

includeConfig "${projectDir}/configs/logging.config"
includeConfig "${projectDir}/configs/containers.config"
includeConfig "${projectDir}/configs/resources.config"
includeConfig "${projectDir}/configs/profiles.config"
includeConfig "${projectDir}/configs/output.config"
process.queue = <NAME OF YOUR AWS BATCH JOB QUEUE> // AWS Batch job queue

aws {
  batch {
    volumes = [ '/fsx:/fsx:ro', '/scratch:/scratch' ]
  }
}
