nextflow_workflow {

    name "Test workflow MAKE_VIRUS_TAXONOMY_DB"
    script "subworkflows/local/makeVirusTaxonomyDB/main.nf"
    workflow "MAKE_VIRUS_TAXONOMY_DB"
    config "tests/configs/index.config"
    tag "subworkflow"
    tag "make_virus_taxonomy_db"

    test("Should run without failures") {
        tag "expect_success"
        when {
            params {
            }
            workflow {
                '''
                def virus_taxonomy_params = [
                    taxonomy_url: params.taxonomy_url,
                    virus_host_db_url: params.virus_host_db_url,
                    host_taxon_db: params.host_taxon_db,
                    virus_taxid: params.virus_taxid,
                    hard_exclude_taxids: params.viral_taxids_exclude_hard
                ]
                input[0] = virus_taxonomy_params
                '''
            }
        }
        then {
            // Should run without failures
            assert workflow.success
        }
    }
}
