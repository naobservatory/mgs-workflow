/************************************************
| CONFIGURATION FILE FOR NAO VIRAL MGS WORKFLOW |
************************************************/

params {
    mode = "run_validation"

    // Directories
    base_dir = "./" // Parent for working and output directories (can be S3)
    ref_dir = "s3://nao-testing/index-test/output" // Reference/index directory (generated by index workflow)

    // Files
    hv_tsv_collapsed = "s3://nao-testing/gold-standard-test/results/hv/hv_hits_putative_collapsed.tsv.gz"

    // Numerical
    blast_hv_fraction = 0.2 // Fraction of putative HV reads to BLAST vs nt (0 = don't run BLAST)
    blast_db_prefix = "other_nt"
}

includeConfig "${projectDir}/configs/containers.config"
includeConfig "${projectDir}/configs/profiles.config"
